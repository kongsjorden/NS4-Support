---
interface Props {
  label?: string;
  aspectRatio?: 'video' | 'square' | 'phone' | 'wide';
  class?: string;
}

const { label = 'Screenshot coming soon', aspectRatio = 'video', class: className = '' } = Astro.props;

const aspectClasses = {
  video: 'aspect-video',
  square: 'aspect-square',
  phone: 'aspect-[9/19]',
  wide: 'aspect-[21/9]',
};
---

<div class:list={[
  "relative rounded-2xl bg-surface border border-border overflow-hidden",
  aspectClasses[aspectRatio],
  className
]}>
  <!-- Grid pattern background -->
  <div class="absolute inset-0 opacity-30">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5" class="text-border"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>

  <!-- Content -->
  <div class="absolute inset-0 flex flex-col items-center justify-center p-6">
    <!-- Icon -->
    <div class="w-16 h-16 rounded-2xl bg-surface-hover flex items-center justify-center mb-4">
      <svg class="w-8 h-8 text-text-dim" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
    </div>
    <span class="text-text-dim text-sm font-medium text-center">{label}</span>
  </div>
</div>
